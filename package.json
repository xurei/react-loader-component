    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.1",
    "chai-enzyme": "^0.8.0",
    "codecov": "^2.3.0",
    "dirty-chai": "^2.0.1",
    "enzyme": "^2.9.1",
    "eslint": "^3.19.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.2.1",
    "eslint-plugin-react-native": "^3.0.1",
