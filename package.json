{
  "name": "react-loader-component",
  "version": "2.0.0-beta.0",
  "description": "A React higher order component that dispatches actions and renders loading/error states",
  "main": "lib/cjs/react-loader.js",
  "module": "lib/module/react-loader.js",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/xurei/react-loader-component.git"
  },
  "scripts": {
    "pretest": "node_modules/.bin/eslint .",
    "test": "BABEL_ENV=coverage node_modules/.bin/mocha --require @babel/register tests",
    "coverage": "BABEL_ENV=coverage node_modules/.bin/nyc --reporter=text-lcov mocha tests",
    "postcoverage": "node_modules/.bin/codecov",
    "preversion": "npm test",
    "build": "rimraf lib/* && npm run build:module && npm run build:cjs",
    "build:module": "BABEL_ENV=module node_modules/.bin/babel src -d lib/module",
    "build:cjs": "node_modules/.bin/babel src -d lib/cjs",
    "prepublishOnly": "npm run build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "keywords": [
    "react",
    "redux",
    "rest",
    "api",
    "loading",
    "load"
  ],
  "author": "Olivier Bourdoux",
  "license": "MIT",
  "dependencies": {
    "deep-eql": "^3.0.1",
    "is-promise": "^2.1.0"
  },
  "peerDependencies": {
    "react": ">16.3.0"
  },
  "devDependencies": {
    "@storybook/addon-storysource": "^6.0.26",
    "@storybook/cli": "^6.0.26",
    "@storybook/react": "^6.0.26",
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.11.5",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "chai": "^4.2.0",
    "chai-enzyme": "^1.0.0-beta",
    "codecov": "^3.8.0",
    "core-js": "^3.6.5",
    "dirty-chai": "^2.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.0.0",
    "eslint-config-xurei": "^1.1.1",
    "eslint-plugin-promise": "^4.2.0",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-native": "^3.5.0",
    "eslint-plugin-security": "^1.4.0",
    "jsdom": "^11.12.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.1.3",
    "promsleep": "^1.0.0",
    "nyc": "^15.1.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "request": "^2.88.2",
    "rimraf": "^2.7.1",
    "sinon": "^2.2.0",
    "sinon-chai": "^2.14.0"
  }
}
